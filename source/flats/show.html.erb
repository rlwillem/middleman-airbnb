<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>
<!-- Inject flat data in template -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('../images/<%=flat.city_slug %>.jpg');">
  <%= image_tag "#{flat.city_slug}.jpg" %>
</div>
<div></div>
<%= image_tag "#{owner}.jpeg", class: "img-circle" %>
<p>
  <%= flat.name %>
</p>
<h1><%= flat.description %></h1>
<p>
  <%= flat.city_name %>
</p>